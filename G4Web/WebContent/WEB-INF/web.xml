<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <welcome-file-list>
    <welcome-file>index.faces</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
 <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>rideshare-realm</realm-name>
    <form-login-config>
      <form-login-page>/login.xhtml</form-login-page>
      <form-error-page>/loginError.xhtml</form-error-page>
    </form-login-config>
  </login-config>
  
    <!-- Security roles used by this web application -->
   <security-role>
    <role-name>Driver</role-name>
 </security-role>
 <security-role>
    <role-name>Passenger</role-name>
 </security-role>
 
  <security-constraint>
    <web-resource-collection>
        <web-resource-name>Secure Driver Pages</web-resource-name>
        <description/>
        <url-pattern>/driver/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>Driver</role-name>
        <role-name>Passenger</role-name>
    </auth-constraint>
</security-constraint>

 <security-constraint>
    <web-resource-collection>
        <web-resource-name>Secure Passenger Pages</web-resource-name>
        <description/>
        <url-pattern>/passenger/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
    	<role-name>Driver</role-name>
        <role-name>Passenger</role-name>
    </auth-constraint>
</security-constraint>
  
  
</web-app>
  
  